{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "src/",
    "paths": {
      "assets": ["assets/*"],
      "components": ["components/*"],
      "config": ["config/*"],
      "constants": ["constants/*"],
      "hooks": ["hooks/*"],
      "providers": ["providers/*"],
      "store": ["store/*"],
      "style": ["style/*"],
      "pages": ["pages/*"],
      "theme": ["theme/*"],
      "utils": ["utils/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
